<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.0 http://maven.apache.org/xsd/assembly-1.1.0.xsd">
	<id>src-${project.version}</id>
	<formats>
		<format>zip</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	<dependencySets>
		<dependencySet>
			<scope>test</scope>
			<unpack>false</unpack>
			<useProjectArtifact>false</useProjectArtifact>
			<outputDirectory>${sources.dest.path}</outputDirectory>
			<includes>
				<include>org.serviceconnector:*:*:sources</include>
			</includes>
		</dependencySet>
		<dependencySet>
			<scope>test</scope>
			<useProjectArtifact>false</useProjectArtifact>
			<unpack>true</unpack>
	        <includes>
	            <include>org.serviceconnector:sc-lib:*:javadoc</include>
	        </includes>
	        <outputDirectory>${doc.dest.path}/javadoc</outputDirectory>	        
	    </dependencySet>
	</dependencySets>
		<files>		
		<!-- put readme.txt to the root folder -->
		<file>
			<source>${provided.resources.src.path}/readme.txt</source>
			<outputDirectory>${installation.dest.path}</outputDirectory>
		</file>
		
		<!-- documentation -->
		<file>
			<source>${provided.resources.src.path}/Open_Issues.xls</source>
			<outputDirectory>${doc.dest.path}</outputDirectory>
		</file>
		<file>
			<source>${provided.resources.src.path}/SC_0_SCMP_E-V2.43.pdf</source>
			<outputDirectory>${doc.dest.path}</outputDirectory>
		</file>
		<file>
			<source>${provided.resources.src.path}/SC_4_Operation_E.pdf</source>
			<outputDirectory>${doc.dest.path}</outputDirectory>
		</file>
		<file>
			<source>${provided.resources.src.path}/SC_CC_E-V1.3.pdf</source>
			<outputDirectory>${doc.dest.path}</outputDirectory>
		</file>
		
		<!-- examples -->
		<file>
			<source>${provided.resources.src.path}/demo-server/rtm/httpd-sc.conf</source>
			<outputDirectory>${examples.dest.path}</outputDirectory>
		</file>		
		<file>
			<source>${collected.resources.src.path}/demo-web-server/WEB-INF/web.xml</source>
			<outputDirectory>${examples.dest.path}</outputDirectory>
		</file>
		<file>
			<source>${provided.resources.src.path}/examples/jconsole.bat</source>
			<outputDirectory>${examples.dest.path}</outputDirectory>
		</file>
		<file>
			<source>${provided.resources.src.path}/examples/jvisualvm.bat</source>
			<outputDirectory>${examples.dest.path}</outputDirectory>
		</file>
		<file>
			<source>${provided.resources.src.path}/sc-console/rtm/example_sc-console.bat</source>
			<outputDirectory>${examples.dest.path}</outputDirectory>
		</file>		
		<file>
			<source>${provided.resources.src.path}/demo-server/rtm/sclist.php</source>
			<outputDirectory>${examples.dest.path}</outputDirectory>
		</file>
		<file>
			<source>${provided.resources.src.path}/demo-server/rtm/scupload.php</source>
			<outputDirectory>${examples.dest.path}</outputDirectory>
		</file>
	</files>
</assembly>